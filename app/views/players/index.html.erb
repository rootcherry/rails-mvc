<h1>There are <%= @players.count %> players in our list</h1>

<table>
	<thead>
		<tr>
			<td>First Name</td>
			<td>Last Name</td>
			<td>Actions</td>
		</tr>
	</thead>

	<tbody>
		<% @players.each do |player| %>
		<tr>
			<td><%= player.first_name %></td>
			<td><%= player.last_name %></td>
			<td>
				<a href="/players/<%= player.id %>">Show</a> |
				<a href="/players/<%= player.id%>/edit">Edit</a>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<br>
<a href="/players/new">Add New Player</a>